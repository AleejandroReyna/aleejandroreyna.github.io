generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

// Contact form submission model
model ContactSubmission {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}
